@model List<(string Username, int Score, int Overdrafts, int Fees)>

<h2>Hall of Shame</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>User</th>
      <th>Score (worse is better)</th>
      <th>Overdrafts</th>
      <th>Fees</th>
    </tr>
  </thead>
  <tbody>
    @for (int i = 0; i < Model.Count; i++)
    {
      <tr>
        <td>@(i+1)</td>
        <td>@Model[i].Username</td>
        <td>@Model[i].Score</td>
        <td>@Model[i].Overdrafts</td>
        <td>@Model[i].Fees</td>
      </tr>
    }
  </tbody>
</table>
<p class="text-muted">Tip: Add more users via the database to see real competition.</p>
